<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <div class="container-fluid">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
            </p>  
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <h3>Our Most Popular Campground</h3>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= campground.name %></h5>
                        <div class="card-subtitle mb-2 text-center">
                            <% if (campground.rating === 0) { %>
                            <em>No reviews yet.</em>
                            <% } else { %>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (campground.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (campground.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (campground.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (campground.rating > 4.5) { %> checked <% } %>"></span>
                            <% } %>
                        </div>
			<div class="text-center">
                        	<a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-success">More Info</a>
                	</div>    
		    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>
