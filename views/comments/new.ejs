<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Add New Comment to <%= shop.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/shops/<%= shop._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/shops/<%= shop._id %>">Go Back</a>
        </div>
        
    </div>
</div>

<%- include("../partials/footer") %>