<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Edit <%= shop.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/shops/<%= shop._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="shop[name]" value=<%= shop.name %>>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="shop[image]" value=<%= shop.image %>>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="shop[description]" value=<%= shop.description %>>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="shop[location]" id="location" value="<%= shop.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/shops">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>